      <div class="flex justify-center gap-4">
        <a href="#projects" class="bg-white text-purple-600 px-6 py-3 rounded-full font-semibold hover:bg-opacity-90 transition-all">
          Ver Proyectos
        </a>
        <a href="#contact" class="border-2 border-white text-white px-6 py-3 rounded-full font-semibold hover:bg-white hover:text-purple-600 transition-all">
          Contacto
        </a>
      </div>
    </div>
  </header>

  <!-- Projects Section -->
  <section id="projects" class="py-20 bg-gray-50 dark:bg-gray-800">
