---
interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<div class="flex flex-col items-center p-6 bg-white dark:bg-gray-700 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
  <img src={icon} alt={name} class="w-16 h-16 mb-4 float" />
  <h3 class="text-lg font-semibold">{name}</h3>
</div>
